{
  "compilerOptions": {
    "target": "es5", // Target ECMAScript 5
    "outDir": "dist", // Output directory for compiled files (not used in Next.js)
    "lib": [
      "dom",
      "dom.iterable",
      "esnext" // Include latest ECMAScript features
    ],
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
    "noEmit": true, // Do not emit output (handled by Next.js)
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "module": "esnext", // Use ESNext module syntax
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Ensure each file can be transpiled independently
    "jsx": "preserve", // Preserve JSX for Next.js to handle
    "incremental": true, // Enable incremental compilation for faster builds
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next" // Enable Next.js specific TypeScript plugin
      }
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "next-env.d.ts", // Automatically generated by Next.js for TypeScript support
    "**/*.ts", // Include all TypeScript files in the project
    "**/*.tsx", // Include all TSX files (React components)
    ".next/types/**/*.ts", // Include types generated by Next.js
  ],
  "exclude": [
    "node_modules" // Exclude node_modules from compilation
  ]
}
